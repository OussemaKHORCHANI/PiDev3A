{% extends 'base2.html.twig' %}


{% block head %}


<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <!--overview start-->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="icon_bag_alt"></i> Gestion Article</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                    <li><i class="fa fa-shopping-bag"></i>Article</li>
                    <li><i class="fa fa-plus"></i>Ajouter Article</li>
                </ol>
            </div>
        </div>

    </section>
        {% endblock %}
{% block formuladd %}

    <!-- Form validations -->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    Form Article
                </header>
                <div class="panel-body">
                    <div class="form">
                        <div class="form-validate form-horizontal" id="feedback_form" method="get" action="">
                            {{ form_start(formarticle) }}
                           {# {{ form_start(formarticle,{'attr': {'novalidate': 'novalidate'}} ) }} #}

                            <div class="form-group ">
                                <label for="cname" class="control-label col-lg-2">Référence  <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    {{ form_row(formarticle.ref, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="ccomment" class="control-label col-lg-2">Libelle <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    {{ form_row(formarticle.libelle, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="ccomment" class="control-label col-lg-2">Categorie<span class="required">*</span></label></label>
                                <div class="col-lg-10">

                                    {{ form_row(formarticle.idcat, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="curl" class="control-label col-lg-2">Quantité</label><span class="required">*</span></label>
                                <div class="col-lg-10">
                                    {{ form_row(formarticle.qtArticle, {'attr': {'class': 'form-control'}}) }}
                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="curl" class="control-label col-lg-2">Prix <span class="required">*</span></label>
                                <div class="col-lg-10">
                                    {{ form_row(formarticle.prix, {'attr': {'class': 'form-control'}}) }}

                                </div>
                            </div>
                            <div class="form-group ">
                                <label for="ccomment" class="control-label col-lg-2">Image<span class="required">*</span></label></label>
                                <div class="col-lg-10">
                                    {{ form_row(formarticle.imageArticle, {'attr': {'class': 'form-control'}}) }}

                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-lg-offset-2 col-lg-10">
                                    <button class="btn btn-primary" type="submit">Save</button>
                                    <button class="btn btn-default" type="button">Cancel</button>
                                </div>
                            </div>
                            {{ form_end(formarticle) }}
                        </div>
                    </div>

                </div>

            </section>
        </div>
    </div>



</section>
{% endblock formuladd %}
