{% extends 'base2.html.twig' %}

{% block title %}Gestion Terrains
{% endblock %}

{% block body %}
	<h1>GÃ©rer Terrain</h1>

	<div class="row">
		<div class="col-lg-12">
			<section class="panel">
				<header class="panel-heading">
					<div>
						<!--  search form start -->


						<form class="navbar-form">
							<input class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">
							<a class="btn btn-primary" href="{{path('imprimer_index')}}" > Imprimer </a>
							<a class="btn btn-warning" href="{{path('statistique')}}" > Statistiques </a>
						</form>

					</div>
					</header>

					<table id="wael" class="table table-striped table-advance table-hover">
						<tbody id="hi">
							<tr>
								<th>
									<i class="icon_profile"></i>
									Nomterrain</th>
								<th>
									<i class="icon_calendar"></i>
									Etat</th>
								<th>
									<i class="icon_mail_alt"></i>
									Description</th>
								<th>
									<i class="icon_pin_alt"></i>
									Adresse</th>
								<th>
									<i class="icon_mobile"></i>
									Photo</th>
								<th>
									<i class="icon_cogs"></i>
									Action</th>
							</tr>
							{% for terrain in terrains %}
								<tr>
									<td>{{ terrain.nomterrain }}</td>
									<td>{{ terrain.etat }}</td>
									<td>{{ terrain.description }}</td>
									<td>{{ terrain.adresse }}</td>
									<td>{{ terrain.photo }}</td>
									<td>
										<div class="btn-group">
											<a class="btn btn-default" href="{{ path('terrain_show', {'idterrain': terrain.idterrain}) }}">Afficher</a>


										</div>
									</td>
								</tr>


							{% else %}
								<tr>
									<td colspan="7">Aucun terrain
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>


				</section>
			</div>
		</div>
		<a href="{{ path('terrain_new') }}" class="btn btn-success">Ajouter</a>
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
		<script>
			$(document).ready(function () {
			$("#myInput").on("keyup", function () {
			var value = $(this).val().toLowerCase();
			$("#hi tr").filter(function () {
			$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
			});
			});
			});
		</script>
	<script>$(document).ready( function () {
			$('#wael').DataTable();
		} );</script>
	{% endblock %}
