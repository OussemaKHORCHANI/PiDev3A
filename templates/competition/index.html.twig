{% extends 'base2.html.twig' %}

{% block title %}Competition index{% endblock %}

{% block head %}

<section id="main-content">
    <section class="wrapper">
        <!--overview start-->
        <div class="row">
            <div class="col-lg-12">

                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                    <li><i class="fa fa-empire"></i>Competition</li>
                </ol>
            </div>
        </div>
        {% endblock %}
        {% block formullist %}
    <h1>Competitions</h1>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div>
                    <!--  search form start -->


                    <form class="navbar-form">
                        <input class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">
                        <a href="{{ path('pdf1')}}" class="btn btn-success"> PDF </a>
                    </form>


                    <!--  search form end -->
                </div>
            </header>
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>

                <th>NomCompetition</th>
                <th>DateDebut</th>
                <th>DateFin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody id = 'hi'>
        {% for competition in competitions %}
            <tr>
                <td>{{ competition.nomCompetition }}</td>
                <td>{{ competition.dateDebut ? competition.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ competition.dateFin ? competition.dateFin|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('competition_show', {'idCompetition': competition.idCompetition}) }}"  class="btn btn-primary">Show </a>
                    <a>/</a>
                    <a href="{{ path('competition_edit', {'idCompetition': competition.idCompetition}) }}"  class="btn btn-success"> Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </section>
    </div>
</div>
    <a href="{{ path('competition_new') }}"><button class="btn btn-success">{{ button_label|default('Create New!') }}</button></a>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function(){
        $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#hi tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
{% endblock %}
