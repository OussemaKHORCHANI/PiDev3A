{% block body %}


        <h1>Demande index</h1>


        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">


                        <div>
                            <!--  search form start -->


                            <form class="navbar-form">
                                <input class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">

                            </form>

                        </div>
                    </header>


                    <table class="table table-striped table-advance table-hover">
                        <tbody id ="hi">>
                        <tr>

                            <th><i class="icon_calendar"></i> Date</th>
                            <th><i class="icon_mail_alt"></i> Nomterrain</th>
                            <th><i class="icon_pin_alt"></i> Nomequipe</th>
                            <th><i class="icon_mobile"></i> email </th>
                            <th><i class="icon_mobile"></i> etat </th>

                        </tr>
                        {% for demande in demandes %}
                        <tr>

                            <td>{{ demande.date }}</td>
                            <td>{{ demande.nomterrain }}</td>
                            <td>{{ demande.nomequipe }}</td>
                            <td>{{ demande.email }}</td>
                            <td>{{ demande.etat }}</td>
                        </tr>







            {% else %}
                <tr>
                    <td colspan="7">Aucun Demande</td>
                </tr>
            {% endfor %}
            </tbody>
            </table>



    </section>
    </div>
    </div>

    <a href="{{ path('demande_new') }}">Create new</a>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#hi tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script></section>

