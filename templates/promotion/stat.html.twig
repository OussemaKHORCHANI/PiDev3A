    <script>
        let ctx = document.querySelector("#monGraph")
        let graph = new Chart(ctx, {
            type: "pie",
            data: {
                labels: ['<= 20','<= 40'],
                datasets: [{
                    label: 'Nombre de Réclamation selon status ',
                    data: {{ nbr|raw }},
                    backgroundColor: ['red', 'blue', 'yellow', 'green', 'purple', 'orange']
                }]
            },
            options: {
                title: {
                    display: true,
                    text: 'Répartiton entreprise par pays'
                },
                legend: {
                    position: 'bottom'
                }
            }
        })
    </script>

