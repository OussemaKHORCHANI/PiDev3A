{% extends 'base2.html.twig' %}

{% block title %}Joueurs index{% endblock %}

{% block head %}

<section id="main-content">
    <section class="wrapper">
        <!--overview start-->
        <div class="row">
            <div class="col-lg-12">

                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="index.html">Home</a></li>
                    <li><i class="fa fa-bank"></i>Terrain</li>
                </ol>
            </div>
        </div>
        {% endblock %}
        {% block formullist %}

    <h1>Liste des joueurs</h1>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div>

                    <form class="navbar-form">
                        <input class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">
                        <a class="btn btn-primary" href="{{ path('sortbyage')}}">Sort By age</a>

                    </form>
                </div>
            </header>

    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>

              <!--  <th>ID</th>-->
                <th>Nom</th>
                <th>Prenom</th>
                <th>Age</th>
                <th>NomClub</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody id = 'hi'>
        {% for joueur in joueurs %}
            <tr>
              <!--  <td>{{ joueur.id }}</td> -->
                <td>{{ joueur.nom }}</td>
                <td>{{ joueur.prenom }}</td>
                <td>{{ joueur.age }}</td>
                <td>{{ joueur.idClub.nomClub }}</td>
                <td>{{ joueur.email }}</td>
                <td>
                    <a href="{{ path('joueurs_show', {'id': joueur.id}) }}"  class="btn btn-primary">Show </a>

                    <a href="{{ path('joueurs_edit', {'id': joueur.id}) }}"  class="btn btn-success" > Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        </section>
    </div>
</div>
    <a href="{{ path('joueurs_new') }}"><button class="btn btn-primary">{{ button_label|default('Create New!') }}</button></a>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#hi tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}
