{% extends 'base2.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club: {{ club.nomClub }}</h1>

    <table class="table table-striped table-advance table-hover">
        <thead>
        <tr>

            <!--  <th>ID</th>-->
            <th>Nom</th>
            <th>Prenom</th>
            <th>Age</th>
            <th>NomClub</th>
            <th>Email</th>
           <!-- <th>actions</th>-->
        </tr>
        </thead>
        <tbody>
        {% for joueur in Joueurs %}
        {% if joueur.idClub.nomClub is same as club.nomClub %}
            <tr>
                <!--  <td>{{ joueur.id }}</td> -->
                <td>{{ joueur.nom }}</td>
                <td>{{ joueur.prenom }}</td>
                <td>{{ joueur.age }}</td>
                <td>{{ joueur.idClub.nomClub }}</td>
                <td>{{ joueur.email }}</td>
            </tr>
{% endif %}
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('club_index') }}">Back to list /</a>

    <a href="{{ path('club_edit', {'idClub': club.idClub}) }}">Edit</a>

    {{ include('club/_delete_form.html.twig') }}
{% endblock %}
