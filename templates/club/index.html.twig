{% extends 'base2.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}
    <h1>Clubs </h1>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <div>
                        <!--  search form start -->


                        <form class="navbar-form">
                            <input class="form-control" id="myInput" type="text" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">
                        </form>


                        <!--  search form end -->
                    </div>
                </header>
    <table class="table table-striped table-advance table-hover">
        <thead>
            <tr>

                <th>Nom Club</th>
                <th>Nombre de joueurs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody id = 'hi'>
        {% for club in clubs %}
            <tr>

                <td>{{ club.nomClub }}</td>
                <td>{{ club.nbrJoueurs }}</td>
                <td>
                    <a href="{{ path('club_show', {'idClub': club.idClub}) }}">Show </a>
                    <a>/</a>
                    <a href="{{ path('club_edit', {'idClub': club.idClub}) }}"> Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </section>
    </div>
    </div>
    <a href="{{ path('club_new') }}"><button class="btn">{{ button_label|default('Create New!') }}</button></a>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function(){
        $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#hi tr").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
{% endblock %}