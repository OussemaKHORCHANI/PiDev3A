{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
<div class="container">
    <div class="section-title text-center " >
    <h1>Register</h1>

    {{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}} ) }}
        {{ form_row(registrationForm.nom) }}
        {{ form_row(registrationForm.prenom) }}
         {{ form_row(registrationForm.address) }}
         {{ form_row(registrationForm.numtelc) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.mdp, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.confirm_mdp) }}
    {{ form_row(registrationForm.captchaCode) }}

        <button type="submit" class=" btn btn-lg btn-success">Inscription</button>
    {{ form_end(registrationForm) }}
    </div></div>
{% endblock %}
